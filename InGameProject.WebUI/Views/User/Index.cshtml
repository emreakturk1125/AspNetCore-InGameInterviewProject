@using InGameProject.Entities.Concrete

@model List<User>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Site wrapper -->
<div class="wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Kullanıcı Listesi</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kullanıcı Listesi</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <a href="/User/AddUser/" class="btn btn-success">
                <i class="fas fa-plus"></i> Yeni Kullanıcı
            </a>

            <div class="card-body p-0">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 5%">
                                #
                            </th> 
                            <th style="width: 20%">
                                Kullanıcı Adı
                            </th>
                            <th style="width: 20%">
                                Kullanıcı Soyadı
                            </th>
                            <th style="width: 20%">
                                Kullanıcı Mail
                            </th>
                            <th style="width: 15%">
                                Durum
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>
                                @item.UserId
                            </td>
                            <td>
                                @item.UserName
                            </td>
                            <td>
                                @item.UserSurname
                            </td>
                            <td>
                                @item.UserEmail
                            </td>
                            <td>
                                @(item.IsActive ? "Aktif":"Pasif")
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" href="/User/EditUser/@item.UserId">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a class="btn btn-danger btn-sm" href="/User/DeleteUser/@item.UserId">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>


<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true,
            "autoWidth": false,
        }); 
    });
</script>


